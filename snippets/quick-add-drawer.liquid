<div data-component='quickAddDrawer'>
  <div
    data-drawer
    data-id='{{- item.id -}}'
    class='fixed translate-x-full transition-transform duration-300 flex-col top-0 right-0 bottom-0 h-full overflow-y-auto min-w-[320px] w-[min(355px,95%)] max-w-full lg:w-[600px] z-20 bg-white p-4 pt-10 lg:py-12 lg:px-[60px] is-active:-translate-x-0'
  >
    <div data-content></div>
    <button
      data-close-button
      class='absolute flex items-center justify-center p-3 top-4 lg:top-6 right-content-wide border border-grey-5 rounded-full'
    >
      {%- render 'component.icon', type: 'close', class: 'w-4' -%}
    </button>
  </div>
  <button
    data-backdrop
    type='button'
    class='fixed transition-opacity w-full duration-300 h-full opacity-0 inset-0 bg-[#1E1E1E] bg-opacity-50 z-10 pointer-events-none is-active:pointer-events-auto is-active:opacity-100'
  ></button>
</div>
