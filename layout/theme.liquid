<!doctype html>
<html class='no-js' lang='{{ request.locale.iso_code }}'>
  {%- assign send_to_login = true -%}
  {%- liquid
    if customer
      assign send_to_login = false
    endif
    if template contains 'customers'
      assign send_to_login = false
    endif
    if request.path == '/challenge'
      assign send_to_login = false
    endif
    if request.design_mode == true
      assign send_to_login = false
    endif
  -%}
  {%- if send_to_login -%}
    {%- liquid
      assign redirectParam = '?return_url=' | append: request.path
    -%}
    <meta content='0; url=/account/login{{- redirectParam -}}' http-equiv='refresh'>
  {%- else -%}
    <head>
      <meta charset='utf-8'>
      <meta http-equiv='X-UA-Compatible' content='IE=edge'>
      <meta name='viewport' content='width=device-width,initial-scale=1'>
      <meta name='theme-color' content=''>
      <link rel='canonical' href='{{ canonical_url }}'>
      <link rel='preload' href='{{- 'index.css' | asset_url -}}' as='style'>

      <link rel='preconnect' href='https://cdn.shopify.com' crossorigin>

      {%- if settings.favicon != blank -%}
        <link rel='icon' type='image/png' href='{{ settings.favicon | img_url: '32x32' }}'>
      {%- endif -%}

      <title>{{ page_title }}</title>

      {%- render 'head.meta' -%}
      {%- render 'head.style' -%}
      {%- render 'window.phill' -%}

      {% if page_description %}
        <meta name='description' content='{{ page_description | escape }}'>
      {% endif %}

      {%- render 'liquid-variables' -%}

      {% comment %} Add the right preload fonts {% endcomment %}
      <link
        rel='preload'
        as='font'
        href='{{ 'GT-America-Regular.woff2' | asset_url | split: '?' | first }}'
        type='font/woff2'
        crossorigin
      >
      <link
        rel='preload'
        as='font'
        href='{{ 'GT-America-Compressed-Medium.woff2' | asset_url | split: '?' | first }}'
        type='font/woff2'
        crossorigin
      >
      <link
        rel='preload'
        as='font'
        href='{{ 'GT-America-Compressed-Bold.woff2' | asset_url | split: '?' | first }}'
        type='font/woff2'
        crossorigin
      >
    </head>

    <body class='min-h-screen antialiased'>
      {%- render 'component.skip-to-content' -%}

      {%- section 'announcement-bar' -%}
      {%- section 'header' -%}
      {%- section 'cart-drawer' -%}

      <main
        id='MainContent'
        class='content-for-layout focus-none'
        role='main'
        tabindex='-1'
      >
        {{ content_for_layout }}
      </main>

      <ul hidden>
        <li id='a11y-refresh-page-message'>{{ 'accessibility.refresh_page' | t }}</li>
      </ul>

      {%- section 'footer' -%}
      {%- render 'footer.scripts' -%}
      {% comment %} We load content header at the end for perfomance, thanks jad {% endcomment %}
      {{ content_for_header }}
    </body>
  {%- endif -%}
</html>
