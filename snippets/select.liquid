<div
  {{ attributes }}
  class='flex gap-4 justify-between cursor-pointer flex-none {{ class -}}'
>
  <div class='relative w-full'>
    <select
      data-select
      {{ select_attributes }}
      class='bg-inherit appearance-none cursor-pointer w-full h-full is-loading:animate-pulse is-loading:cursor-wait'
    >
      {%- if placeholder != blank -%}
        <option selected disabled>{{- placeholder | t -}}</option>
      {%- endif -%}
      {{ options -}}
    </select>
    <span
      class="after:block after:h-full after:w-full after:bg-[url('icon.select.svg')] after:bg-no-repeat absolute w-[1em] top-0 bottom-0 right-0 pointer-events-none"
    ></span>
  </div>
</div>
