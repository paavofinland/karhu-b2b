<script id='liquid-variables' type='application/json'>
  {
    "store": {
      "store": "{{- request.host | split: '.' | first | split: '-' | last -}}",
      "currencies": [
        {%- for currency in shop.enabled_currencies -%}
          {
            "iso_code": "{{- currency.iso_code -}}",
            "symbol": "{{- currency.symbol -}}"
          }
          {%- unless forloop.last -%},{%- endunless -%}
        {%- endfor -%}
      ],
      "store_currency": "{{- cart.currency.symbol -}}"
    },
    "customer": {
      "id": "{{- customer.id -}}",
      "secret": "{{- customer.metafields.functions.secret -}}",
      "selected_store_customer": "{{- customer.metafields.agent.selected_store_customer -}}",
      "tags": {{- customer.tags | json -}}
    },
    "translations": {
      "server_error": "{{- 'general.server_error' | t -}}",
      "select_sizes_error": "{{- 'products.product.select_sizes_error' | t -}}"
    }
  }
</script>
