<section data-addresses>
  <h5 class='text-heading-5 pb-5 border-b border-black'>{{- 'customer.account.addresses.addresses' | t -}}</h5>
  {% if customer.addresses_count == 0 %}
    <p class='text-body-small mt-10 mb-7 lg:mb-9'>{{- 'customer.account.addresses.no_addresses_text' | t -}}</p>
  {% else %}
    <div>
      {%- render 'component.address'
        address: customer.default_address
      -%}
      {% for address in customer.addresses %}
        {%- unless address == customer.default_address -%}
          {%- render 'component.address'
            address: address
          -%}
        {%- endunless -%}
      {% endfor %}
    </div>
  {% endif %}

  {%- render 'component.button',
    text: 'customer.account.addresses.add_address.submit_button',
    class: 'px-8 lg:px-12 mt-10',
    style: 'primary',
    attributes: 'data-add-address-button'
  -%}
</section>
