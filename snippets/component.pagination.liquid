{%- comment -%}
  Expected behaviour:
    Renders a set of links for paginated results. Must be used within paginate tags.

  About:
    Renders a set of links for paginated results. Must be used within paginate tags.

  Accepts:
    - paginate: {Object}

    OPTIONAL
    - anchor: {String} This can be added so that on page reload it takes you to wherever you've placed your anchor tag.

  Usage:
    {% paginate results by 2 %}
      {% render 'pagination', paginate: paginate, anchor: '#yourID' %}
    {% endpaginate %}
{%- endcomment -%}

{%- if paginate.parts.size > 0 -%}
  <nav class="" role="navigation" aria-label="pagination">
    <ul class="" role="list">
    {%- if paginate.previous -%}
      <li>
        <a href="{{ paginate.previous.url }}{{ anchor }}" class="" aria-label="">
          previous
        </a>
      </li>
    {%- endif -%}

    {%- for part in paginate.parts -%}
      <li>
        {%- if part.is_link -%}
          <a href="{{ part.url }}{{ anchor }}" class="" aria-label="">{{ part.title }}</a>
        {%- else -%}
          {%- if part.title == paginate.current_page -%}
            <span class=" aria-current="page" aria-label="">{{ part.title }}</span>
          {%- else -%}
            <span class="">{{ part.title }}</span>
          {%- endif -%}
        {%- endif -%}
      </li>
    {%- endfor -%}
    {%- if paginate.next -%}
      <li>
        <a href="{{ paginate.next.url }}{{ anchor }}" class="" aria-label="" >
          next
        </a>
      </li>
    {%- endif -%}
    </ul>
  </nav>
{%- endif -%}